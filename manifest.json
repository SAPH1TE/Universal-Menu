{
  "manifest_version": 3,
  "name": "Universal Menu",
  "version": "0.0.0",
  "description": "Inject custom JavaScript into a list of specified websites.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": [
        "https://student.readingplus.com/*",
        "https://play.stmath.com/*",
        "https://google.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
